			text-align: center;
			margin-top: 50px;
			color: deeppink;
		}
		.progress {
			background: #dbdbdb;
			height: 5px;
			position: sticky;
			top: 0;
			left: 0;
			border-radius: 5px;
		}
		.progress:before {
			content: '';
			position: absolute;
			border-radius: 5px;
			background: deeppink;
			width: 0;
			height: 5px;
			animation: progress linear both;
			animation-timeline: scroll(block nearest);
		}

		.container {
			display: block;
		}
	}

	@keyframes progress {
		to {
			width: 100%;
		}
	}
