<div class="static-current">
	<span class="static-current__badge">New feature</span>
</div>

<script is:inline>
	(() => {
		const run = () => {
			document.querySelectorAll('.static-current').forEach((root) => {
				const utils = window.RelativeColorUtils;
				if (!utils || utils.supportsRelative) return;

				const base = '#1D4ED8';
				const badge = root.querySelector('.static-current__badge');
				if (!badge) return;

				const bg = utils.shiftHsl(base, { l: 40 });
				badge.style.backgroundColor = bg;
				badge.style.borderColor = utils.rgbaFromHex(base, 0.2);
			});
		};

		if (window.RelativeColorUtils) {
			run();
		} else {
			window.addEventListener('relativecolors:ready', run, { once: true });
		}
	})();
</script>

