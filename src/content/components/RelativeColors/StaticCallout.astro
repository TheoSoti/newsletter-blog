<style>
	.static-callout {
		--tone: #4b6bff;
		--tone-strong: hsl(from var(--tone) h s calc(l * 0.78));
		--tone-soft: hsl(from var(--tone) h calc(s * 0.8) calc(l * 1.43));
		--tone-border: rgb(from var(--tone) r g b / 0.2);
		--tone-shadow: rgb(from var(--tone) r g b / 0.25);
		border: 1px solid var(--tone-border);
		box-shadow: 0 12px 24px var(--tone-shadow);
		padding: 1.2rem;
		border-radius: 16px;
		margin: 1.2rem;
		display: grid;
		gap: 0.5rem;
		border: 1px solid var(--tone-border);
		background-color: var(--tone-soft);
		color: var(--tone);
		box-shadow: 0 12px 24px var(--tone-shadow);
	}

	.static-callout__eyebrow {
		margin: 0;
		font-size: 0.85rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
	}

	.static-callout__title {
		margin: 0;
		font-size: 1.1rem;
		font-weight: 700;
		color: var(--tone-strong);
	}

	.static-callout__text {
		margin: 0;
		font-size: 0.95rem;
	}

	.static-callout__text strong {
		color: var(--tone-strong);
	}
</style>
