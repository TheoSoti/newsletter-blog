<div class="relative-alpha">
	<div class="relative-alpha__controls">
		<label class="relative-alpha__field">
			<span class="relative-alpha__label">Base color</span>
			<span class="relative-alpha__control">
				<input class="relative-alpha__color" type="color" value="#ff7a59" data-base-input />
				<span class="relative-alpha__value" data-base-value>#FF7A59</span>
			</span>
		</label>

		<label class="relative-alpha__field">
			<span class="relative-alpha__label">Detail alpha</span>
			<span class="relative-alpha__control relative-alpha__control--range">
				<input
					class="relative-alpha__range"
					type="range"
					min="0"
					max="0.6"
					step="0.05"
					value="0.2"
					data-alpha-input
				/>
				<span class="relative-alpha__value" aria-live="polite" data-alpha-value>0.20</span>
			</span>
		</label>
	</div>

	<div class="relative-alpha__preview" role="group" aria-label="Alpha comparison">
		<article class="relative-alpha__card relative-alpha__card--relative">
			<p class="relative-alpha__card-title">Relative details</p>
			<p class="relative-alpha__card-text">
				Borders, shadows, and the badge are derived from the base color.
			</p>
			<div class="relative-alpha__badge">Status</div>
			<button class="relative-alpha__button" type="button">Review</button>
		</article>

		<article class="relative-alpha__card relative-alpha__card--static">
			<p class="relative-alpha__card-title">Static gray details</p>
			<p class="relative-alpha__card-text">
				Same layout, but the accents stay gray as the base color changes.
			</p>
			<div class="relative-alpha__badge">Status</div>
			<button class="relative-alpha__button" type="button">Review</button>
		</article>
	</div>

	<p class="relative-alpha__fallback" role="status">
		Relative colors are not supported in this browser yet.
	</p>
</div>

<script is:inline>
	document.querySelectorAll('.relative-alpha').forEach((root) => {
		const baseInput = root.querySelector('[data-base-input]');
		const alphaInput = root.querySelector('[data-alpha-input]');
		const baseValue = root.querySelector('[data-base-value]');
		const alphaValue = root.querySelector('[data-alpha-value]');

		const update = () => {
			const base = baseInput.value.toUpperCase();
			const alpha = Number(alphaInput.value);

			root.style.setProperty('--brand', base);
			root.style.setProperty('--alpha', alpha.toString());

			baseValue.textContent = base;
			alphaValue.textContent = alpha.toFixed(2);
		};

		baseInput.addEventListener('input', update);
		alphaInput.addEventListener('input', update);

		update();
	});
</script>

