<div class="relative-gradient">
	<div class="relative-gradient__controls">
		<label class="relative-gradient__field">
			<span class="relative-gradient__label">Base color</span>
			<span class="relative-gradient__control">
				<input class="relative-gradient__color" type="color" value="#ff7a59" data-base-input />
				<span class="relative-gradient__value" data-base-value>#FF7A59</span>
			</span>
		</label>

		<label class="relative-gradient__field">
			<span class="relative-gradient__label">Depth</span>
			<span class="relative-gradient__control relative-gradient__control--range">
				<input
					class="relative-gradient__range"
					type="range"
					min="6"
					max="26"
					step="1"
					value="14"
					data-depth-input
				/>
				<span class="relative-gradient__value" aria-live="polite" data-depth-value>14%</span>
			</span>
		</label>
	</div>

	<div class="relative-gradient__preview" role="group" aria-label="Gradient preview">
		<div class="relative-gradient__card">
			<span class="relative-gradient__badge">New drop</span>
			<h3 class="relative-gradient__title">Meridian collection</h3>
			<p class="relative-gradient__text">
				One base color, plus a lighter and darker shift for a cohesive hero block.
			</p>
			<button class="relative-gradient__button" type="button">Shop now</button>
		</div>
	</div>

	<p class="relative-gradient__fallback" role="status">
		Relative colors are not supported in this browser yet.
	</p>
</div>

<script is:inline>
	(() => {
		const run = () => {
			document.querySelectorAll('.relative-gradient').forEach((root) => {
				const baseInput = root.querySelector('[data-base-input]');
				const depthInput = root.querySelector('[data-depth-input]');
				const baseValue = root.querySelector('[data-base-value]');
				const depthValue = root.querySelector('[data-depth-value]');
				const utils = window.RelativeColorUtils;

				const update = () => {
					const base = baseInput.value.toUpperCase();
					const depth = Number(depthInput.value);

					root.style.setProperty('--brand', base);
					root.style.setProperty('--depth', `${depth}%`);

					baseValue.textContent = base;
					depthValue.textContent = `${depth}%`;

					if (utils && !utils.supportsRelative) {
						const top = utils.shiftHsl(base, { l: depth });
						const bottom = utils.shiftHsl(base, { l: -depth });
						const glow = utils.rgbaFromHex(base, 0.35);
						const text = utils.contrastFromHex(base);
						const borderBase = utils.shiftHsl(base, { l: 35 });
						const highlightBase = utils.shiftHsl(base, { l: 40 });

						root.style.setProperty('--top', top);
						root.style.setProperty('--bottom', bottom);
						root.style.setProperty('--glow', glow);
						root.style.setProperty('--text', text);
						root.style.setProperty('--card-border', utils.rgbaFromHex(borderBase, 0.4));
						root.style.setProperty('--badge-bg', utils.rgbaFromHex(borderBase, 0.25));
						root.style.setProperty('--button-bg', utils.rgbaFromHex(borderBase, 0.18));
						root.style.setProperty('--button-border', utils.rgbaFromHex(highlightBase, 0.5));
						root.style.setProperty('--highlight', utils.rgbaFromHex(highlightBase, 0.25));
					}
				};

				baseInput.addEventListener('input', update);
				depthInput.addEventListener('input', update);

				update();
			});
		};

		if (window.RelativeColorUtils) {
			run();
		} else {
			window.addEventListener('relativecolors:ready', run, { once: true });
		}
	})();
</script>

<style>
