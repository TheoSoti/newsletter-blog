		--glow: rgb(from var(--brand) r g b / 0.35);
		--text: hsl(from var(--brand) h 20% calc(100 - l));
		--card-border: hsl(from var(--brand) h s calc(l + 35) / 0.4);
		--badge-bg: hsl(from var(--brand) h s calc(l + 35) / 0.25);
