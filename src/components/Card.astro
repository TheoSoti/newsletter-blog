---
const { post, width, height } = Astro.props;
import FormattedDate from './FormattedDate.astro';
---

<li class="card">
	<a href={`/blog/${post.slug}/`}>
		<img width={width} height={height} src={post.data.heroImage} alt={post.data.title} />
		<h4 class="title">{post.data.title}</h4>
		<span><FormattedDate date={post.data.pubDate} /> - {post.data.readingTime}</span>
	</a>
</li>

<style>
	li {
		width: 100%;
		margin: 0 auto;
	}
	img {
		border-radius: 4px 4px 0 0;
		border-bottom: 2px solid var(--border);
		object-fit: cover;
		width: 100%;
		height: 150px;
	}
	a {
		border-radius: 6px;
		text-decoration: none;
		background: var(--white);
		display: flex;
		flex-direction: column;
		color: var(--text);
		height: 100%;
		border: 2px solid var(--border);
		box-shadow: var(--box-shadow);
		transition-property: all;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 0.15s;
	}
	a:hover,
	a:focus {
		box-shadow: 0 0 var(--black);
		transform: translateY(6px);
	}
	h4 {
		padding: 0.5rem 1rem 0.2rem;
		font-size: 1em;
		line-height: 1.4;
		margin: 0;
	}
	span {
		padding: 0rem 1rem;
		font-size: 0.8em;
		margin-bottom: 0.5em;
	}
</style>
