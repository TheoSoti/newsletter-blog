---
import profile from '../../assets/profile.png';
import logo from '../../assets/logo.png';

const structuredData = {
	author: {
		'@type': 'Person',
		name: 'Theo Soti',
		description: 'Frontend Developer & Content Creator',
		image: profile.src,
		sameAs: ['https://www.linkedin.com/in/theodorelefevre/', 'https://x.com/theoleff', 'https://codepen.io/emgarf'],
	},
	publisher: {
		'@type': 'Organization',
		name: 'Theo Soti',
		logo: {
			'@type': 'ImageObject',
			url: logo.src,
			width: 200,
			height: 50,
		},
	},
