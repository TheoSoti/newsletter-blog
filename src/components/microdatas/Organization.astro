---
import profile from '../../assets/profile.png';
import logo from '../../assets/logo.png';

const structuredData = {
	'@context': 'https://schema.org',
	'@type': 'WebSite',
	name: 'Theo Soti',
	url: 'https://theosoti.com/',
	description: 'CSS tips and frontend development insights by Theo Soti.',
	inLanguage: 'en',
	author: {
		'@type': 'Person',
		name: 'Theo Soti',
		description: 'Frontend Developer & Content Creator',
		image: `https://theosoti.com/${profile.src}`,
		sameAs: ['https://www.linkedin.com/in/theodorelefevre/', 'https://x.com/theoleff', 'https://codepen.io/emgarf'],
	},
	publisher: {
		'@type': 'Organization',
		name: 'Theo Soti',
		logo: {
			'@type': 'ImageObject',
			url: `https://theosoti.com/${logo.src}`,
			width: 200,
			height: 50,
		},
	},
