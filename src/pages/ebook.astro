---
import '../styles/ebook.css';

import { Picture } from 'astro:assets';
import ebook from '../assets/ebook/ebook.png';
import comingSoon from '../assets/ebook/coming-soon.png';
import testimonial1 from '../assets/ebook/zark-muckerberg.jpeg';
import testimonial2 from '../assets/ebook/melon-tusk.png';
import testimonial3 from '../assets/ebook/kim-coot.png';
import testimonial4 from '../assets/ebook/parry-lage.png';
import testimonial5 from '../assets/ebook/beff-jezos.png';
import testimonial6 from '../assets/ebook/pundar-sichai.png';

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en">
	<head>
		<!-- Global Metadata -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Primary Meta Tags -->
		<title>You don't need JavaScript</title>
		<meta name="title" content="You don't need JavaScript" />
		<meta
			name="description"
			content="Discover tips, tricks and modern HTML & CSS features to create interactive components without JavaScript in this practical ebook."
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content="You don't need JavaScript" />
		<meta
			property="og:description"
			content="Discover tips, tricks and modern HTML & CSS features to create interactive components without JavaScript in this free, practical ebook."
		/>
		<meta property="og:image" content="" />
		<!-- TODO -->

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content="You don't need JavaScript" />
		<meta
			property="twitter:description"
			content="Discover tips, tricks and modern HTML & CSS features to create interactive components without JavaScript in this free, practical ebook."
		/>
		<meta property="twitter:image" content="" />
		<!-- TODO -->
		<script is:inline src="https://f.convertkit.com/ckjs/ck.5.js" defer></script>
	</head>

	<body>
		<section class="hero">
			<div class="hero__container">
				<div class="hero__content">
					<h1 class="hero__title">You don't need JavaScript</h1>
					<p class="hero__subtitle">
						Learn how to build lightweight CSS components without JavaScript. Improve your site's speed, reduce bugs,
						and develop faster with real-world methods.
					</p>

					<p class="hero__info">Sign up now and get a surprise when the book launches.</p>
					<form
						action="https://app.kit.com/forms/7980076/subscriptions"
						class="seva-form formkit-form"
						method="post"
						data-sv-form="7124812"
						data-uid="db7a3d5935"
						data-format="inline"
						data-version="5"
					>
						<div data-style="clean">
							<div data-element="fields" data-stacked="false" class="seva-fields formkit-fields">
								<div class="formkit-field">
									<input
										class="formkit-input"
										name="email_address"
										aria-label="Email Address"
										placeholder="Email Address"
										required=""
										type="email"
									/>
								</div>
								<button
									type="submit"
									data-element="submit"
									class="formkit-submit formkit-submit button"
									aria-label="Join the newsletter"
								>
									Notify Me
								</button>
							</div>
						</div>
					</form>
				</div>
				<div class="hero__image">
					<div class="background"></div>
					<Picture
						src={comingSoon}
						formats={['avif', 'webp', 'jpg']}
						width="200"
						height="200"
						alt="Coming soon badge"
						class="coming-soon"
					/>
					<Picture
						src={ebook}
						formats={['avif', 'webp', 'jpg']}
						width="500"
						class="book"
						height="800"
						alt="You don't need JavaScript ebook cover"
					/>
				</div>
			</div>
		</section>

		<section class="features">
			<div class="features__container">
				<h2 class="features__title">What makes the book unique</h2>

				<ul class="features__list">
					<li class="feature">
						<svg width="64px" height="64px" viewBox="0 0 24 24" fill="none">
							<path
								d="M16 8V5L19 2L20 4L22 5L19 8H16ZM16 8L12 11.9999M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2M17 12C17 14.7614 14.7614 17 12 17C9.23858 17 7 14.7614 7 12C7 9.23858 9.23858 7 12 7"
								stroke="var(--secondary)"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"></path>
						</svg>
						<div>
							<h3 class="feature__title">Clear and direct approach</h3>
							<p class="feature__description">
								If you're a visual learner, this book is for you. It focuses more on actionable advice and tips.
							</p>
						</div>
					</li>

					<li class="feature">
						<svg width="64px" height="64px" viewBox="0 0 20 20" fill="none">
							<path
								fill="#e44e25"
								fill-rule="evenodd"
								d="M3 10a7 7 0 019.307-6.611 1 1 0 00.658-1.889 9 9 0 105.98 7.501 1 1 0 00-1.988.22A7 7 0 113 10zm14.75-5.338a1 1 0 00-1.5-1.324l-6.435 7.28-3.183-2.593a1 1 0 00-1.264 1.55l3.929 3.2a1 1 0 001.38-.113l7.072-8z"
							></path>
						</svg>
						<div>
							<h3 class="feature__title">Real-life examples</h3>
							<p class="feature__description">
								All the examples in the book are things that you face in your day to day work. Nothing is abstract.
							</p>
						</div>
					</li>

					<li class="feature">
						<svg width="64px" height="64px" viewBox="0 0 24 24" fill="none">
							<path
								d="M8 5C7.44772 5 7 5.44772 7 6C7 6.55228 7.44772 7 8 7H12.2344L8.50386 9.13176C8.11017 9.35672 7.91712 9.81842 8.0335 10.2567C8.14988 10.6949 8.54657 11 9 11H13.8C13.9105 11 14 11.0895 14 11.2V13.5029C14 13.556 13.9789 13.6069 13.9414 13.6444L12.1414 15.4444C12.0633 15.5225 11.9367 15.5225 11.8586 15.4444L9.70711 13.2929C9.31658 12.9024 8.68342 12.9024 8.2929 13.2929C7.90237 13.6834 7.90237 14.3166 8.2929 14.7071L11.2929 17.7071C11.6834 18.0976 12.3166 18.0976 12.7071 17.7071L15.7071 14.7071C15.8946 14.5196 16 14.2652 16 14V10C16 9.44772 15.5523 9 15 9H12.7656L16.4961 6.86824C16.8898 6.64328 17.0829 6.18158 16.9665 5.74333C16.8501 5.30509 16.4534 5 16 5H8Z"
