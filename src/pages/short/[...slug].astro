---
import { type CollectionEntry, getCollection } from 'astro:content';
import ShortPost from '../../layouts/ShortPost.astro';
import { getShortSlug } from '../../utils/shortSlug';

export async function getStaticPaths() {
	const posts = await getCollection('short');
	return posts.map((post) => ({
		params: { slug: getShortSlug(post.slug) },
		props: post,
	}));
}
type Props = CollectionEntry<'short'>;

const post = Astro.props;
const { Content } = await post.render();
const { headings } = await post.render();
---

<ShortPost {...post.data} headings={headings} slug={getShortSlug(post.slug)}>
	<Content />
</ShortPost>
